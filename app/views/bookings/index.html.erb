<div class="container">
  <% if @bookings.present? %>
    <h1>Bookings</h1>
    <% @bookings.each do |booking|  %>
      <div class="card-product my-3 rounded">
        <%= cl_image_tag(booking.car.photos.first.key, class: "d-block w-25") %>
        <div class="card-product-infos ">
        <h2>Enjoy the <%= booking.car.brand %> <%= booking.car.model %> in the color <%= booking.car.color %></h2>
        <%= link_to "Delete", delete_booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
        </div>
      </div>
    <% end %>
  <% else %>
    <h2>You dont have any booking</h2>
  <% end %>
</div>
